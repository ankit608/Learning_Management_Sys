<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title || "Inbox" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">
  <div class="flex h-screen">
    
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-lg flex flex-col">
      <div class="p-4 border-b">
        <h1 class="text-xl font-bold"><%= user && user.name ? user.name : "User" %></h1>
        <p class="text-sm text-gray-500">Inbox</p>
      </div>
      <nav class="flex-1 p-4">
        <ul class="space-y-2">
          <li><a href="#" class="block px-3 py-2 rounded-md hover:bg-gray-100 font-medium">Inbox</a></li>
          <li><a href="#" class="block px-3 py-2 rounded-md hover:bg-gray-100">Sent</a></li>
          <li><a href="#" class="block px-3 py-2 rounded-md hover:bg-gray-100">Drafts</a></li>
          <li><a href="#" class="block px-3 py-2 rounded-md hover:bg-gray-100">Trash</a></li>
        </ul>
      </nav>
      <div class="p-4 border-t">
        <button class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700">Compose</button>
      </div>
    </aside>

    <!-- Main content -->
    <main class="flex-1 flex flex-col">
      <!-- Top bar -->
      <header class="flex items-center justify-between p-4 bg-white border-b shadow-sm">
        <h2 class="text-lg font-semibold">Inbox</h2>
        <input type="text" placeholder="Search mail..." class="px-3 py-2 border rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
      </header>

      <div class="flex flex-1 overflow-hidden">
        <!-- Email list -->
        <section class="w-1/3 border-r bg-white overflow-y-auto">
          <% if (emails && emails.length) { %>
            <ul>
              <% emails.forEach(function(email) { %>
                <li class="p-4 border-b hover:bg-gray-50 cursor-pointer">
                  <p class="font-medium"><%= email.from %></p>
                  <p class="text-sm text-gray-600 truncate"><%= email.subject %></p>
                  <p class="text-xs text-gray-400"><%= email.date %></p>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="p-4 text-gray-500">No emails found.</p>
          <% } %>
        </section>

        <!-- Email preview -->
        <section class="flex-1 p-6 overflow-y-auto">
          <% if (selectedEmail) { %>
            <h3 class="text-xl font-bold mb-1"><%= selectedEmail.subject %></h3>
            <p class="text-sm text-gray-500 mb-4">From: <%= selectedEmail.from %> â€¢ <%= selectedEmail.date %></p>
            <div class="prose max-w-none">
              <p><%= selectedEmail.body %></p>
            </div>
          <% } else { %>
            <div class="flex items-center justify-center h-full text-gray-400">
              <p>Select an email to view</p>
            </div>
          <% } %>
        </section>
      </div>
    </main>
  </div>
</body>
</html>
